{% extends 'base.html.twig' %}
{% block title %}Hello ArticulosController!{% endblock %}
{% block body %}
<h1>Listado de Articulos</h1>
<table border=”1”>
    <tr>
        <th>ID</th>
        <th>Titulo</th>
        <th>Fecha de Creacion</th>
    </tr>
    {% if array_articulos is defined and array_articulos is iterable %}
        {% for articulo in array_articulos %}
            <tr>
                <td>{{articulo.id}}</td>
                <td>{{articulo.title}}</td>
                <td>{{articulo.created}}</td>
            </tr>
        {% endfor %}
    {% elseif articulo != null %}
            <tr>
                <td>{{articulo.id}}</td>
                <td>{{articulo.title}}</td>
                <td>{{articulo.created}}</td>
            </tr>
    {% else %}
        <h2>El producto solicitado no existe.</h2>
    {% endif %}
    
</table>
{% endblock %}